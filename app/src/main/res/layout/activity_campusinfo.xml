<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="-69dp">

        <Button
                android:id="@+id/interview_btn"
                android:layout_width="204dp"
                android:layout_height="272dp"

                android:background="@drawable/campusinfo_style"
                android:drawableTop="@drawable/interview"
                android:paddingTop="40dp"
                android:text="インタビュー"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.81" />

        <Button
                android:id="@+id/document_btn"
                android:layout_width="204dp"
                android:layout_height="272dp"
                android:layout_marginStart="228dp"

                android:background="@drawable/campusinfo_style"
                android:drawableTop="@drawable/siryou"
                android:paddingTop="40dp"
                android:text="資料請求"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.81" />

        <Button
                android:id="@+id/subject_btn"
                android:layout_width="204dp"
                android:layout_height="272dp"

                android:background="@drawable/campusinfo_style"
                android:drawableTop="@drawable/subject"
                android:paddingTop="40dp"
                android:text="学科紹介"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.217" />

        <Button
                android:id="@+id/ivent_btn"
                android:layout_width="204dp"
                android:layout_height="272dp"

                android:background="@drawable/campusinfo_style"
                android:drawableTop="@drawable/calendar_"
                android:freezesText="false"
                android:paddingTop="40dp"
                android:text="イベント一覧"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.217" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>