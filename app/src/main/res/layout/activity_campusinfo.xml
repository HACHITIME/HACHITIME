<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <View
                android:id="@+id/view2"
                android:layout_width="fill_parent"
                android:layout_height="0.1dp"
                android:background="#ffffff"
                app:layout_constraintBottom_toTopOf="@+id/ivent_btn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar"
                app:layout_constraintVertical_bias="0.0" />

        <Button
                android:id="@+id/ivent_btn"
                android:layout_width="0dp"
                android:layout_height="0dp"

                android:background="@drawable/campusinfo_style"
                android:drawableTop="@drawable/calendar"
                android:duplicateParentState="true"
                android:freezesText="false"
                android:includeFontPadding="false"
                android:paddingTop="55dp"
                android:scrollbarSize="4dp"
                android:text="イベント一覧"
                android:textSize="25dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/interview_btn"
                app:layout_constraintEnd_toStartOf="@id/frameLayout"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view2" />

        <Button
                android:id="@+id/subject_btn"
                android:layout_width="0dp"
                android:layout_height="0dp"

                android:background="@drawable/campusinfo_style"
                android:drawableTop="@drawable/subject"
                android:paddingTop="55dp"
                android:text="学科紹介"
                android:textSize="25dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/document_btn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/frameLayout"
                app:layout_constraintTop_toBottomOf="@+id/view2" />

        <Button
                android:id="@+id/interview_btn"
                android:layout_width="0dp"
                android:layout_height="0dp"

                android:background="@drawable/campusinfo_style"
                android:drawableTop="@drawable/interview"
                android:includeFontPadding="false"
                android:paddingTop="55dp"
                android:text="インタビュー"
                android:textSize="25dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/view"
                app:layout_constraintEnd_toStartOf="@+id/document_btn"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivent_btn" />

        <Button
                android:id="@+id/document_btn"
                android:layout_width="0dp"
                android:layout_height="0dp"

                android:background="@drawable/campusinfo_style"
                android:drawableTop="@drawable/docment"
                android:paddingTop="55dp"
                android:text="資料請求"
                android:textSize="25dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/frameLayout3"
                app:layout_constraintTop_toBottomOf="@+id/subject_btn" />

        <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.07999998">

        </FrameLayout>

        <FrameLayout
                android:id="@+id/frameLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.25"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

        </FrameLayout>

        <FrameLayout
                android:id="@+id/frameLayout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.82">

        </FrameLayout>

        <FrameLayout
                android:id="@+id/frameLayout4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.75"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

        </FrameLayout>

        <!--
        <ImageView
                android:id="@+id/modol_btn"
                android:layout_width="30dp"
                android:layout_height="34dp"
                android:background="@drawable/toolbar_flame_style"
                android:contentDescription="@string/modol_btn"
                app:layout_constraintBottom_toBottomOf="@+id/toolbar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.115"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.705"
                app:srcCompat="@drawable/toolbar_modol" />
         -->


        <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="0dp"
                android:layout_height="65dp"

                android:layout_marginBottom="15dp"
                android:background="@drawable/toolbar_style"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:layout_constraintBottom_toTopOf="@+id/ivent_btn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

        <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:background="#ffffff"
                android:orientation="horizontal"
                android:padding="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                app:layout_constraintVertical_bias="1.0">

            <ImageButton
                    android:id="@+id/school_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_weight="1"
                    android:background="@drawable/toolbar_flame_style"
                    android:contentDescription="@string/school_btn"
                    app:srcCompat="@drawable/toolbar_school" />

            <ImageButton
                    android:id="@+id/map_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_marginStart="3.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/toolbar_flame_style"
                    android:contentDescription="@string/school_btn"
                    app:srcCompat="@drawable/toolbar_map" />

            <ImageButton
                    android:id="@+id/stamp_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_marginStart="3.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/toolbar_flame_style"
                    android:contentDescription="@string/school_btn"
                    app:srcCompat="@drawable/toolbar_stamp" />

            <ImageButton
                    android:id="@+id/info_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_marginStart="3.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/toolbar_flame_style"
                    android:contentDescription="@string/school_btn"
                    app:srcCompat="@drawable/toolbar_info" />

            <ImageButton
                    android:id="@+id/bus_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_marginStart="3.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/toolbar_flame_style"
                    android:contentDescription="@string/school_btn"
                    app:srcCompat="@drawable/toolbar_bus" />


        </LinearLayout>

        <ImageButton
                android:id="@+id/modol_btn"
                android:layout_width="41dp"
                android:layout_height="32dp"
                android:background="@drawable/toolbar_modoru_style"
                android:contentDescription="@string/modol_btn"
                app:layout_constraintBottom_toBottomOf="@+id/toolbar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.076"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.785"
                app:srcCompat="@drawable/toolbar_modoru" />


        <TextView
                android:id="@+id/tytle"
                android:layout_width="195dp"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:color="#000000"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="30dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.025" />

        <View
                android:id="@+id/view"
                android:layout_width="fill_parent"
                android:layout_height="4dp"
                android:layout_marginTop="456dp"
                android:background="@android:color/darker_gray"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />


    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>