<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".bustimeActivity">


    <ImageView
            android:id="@+id/imageView4"
            android:layout_width="305dp"
            android:layout_height="82dp"
            android:layout_marginBottom="644dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.376"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/bustime_waku2"
            android:textStyle="bold"
            />

    <TextView
            android:id="@+id/time_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"

            android:textStyle="bold"
            android:layout_marginEnd="104dp"
            android:text="時間"
            app:layout_constraintEnd_toEndOf="@+id/imageView4"
            app:layout_constraintTop_toTopOf="@+id/imageView4" />

    <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="14dp"
            android:text="現在時刻"
            app:layout_constraintEnd_toStartOf="@+id/time_textview"
            app:layout_constraintTop_toTopOf="@+id/imageView4" />

    <Button
            android:id="@+id/b0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:layout_marginTop="132dp"
            android:onClick="b0"
            android:text="みなみ野→駅"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <Button
            android:id="@+id/b2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/b0"
            android:layout_marginStart="8dp"
            android:layout_marginTop="132dp"
            android:onClick="b1"
            android:text="駅→みなみ野"
            app:layout_constraintStart_toEndOf="@+id/b0"
            app:layout_constraintTop_toTopOf="parent" />

    <Button
            android:id="@+id/b3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="128dp"
            android:onClick="b3"
            android:text="駅→八王子"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/b2" />

    <Button
            android:id="@+id/b1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/b1"
            android:layout_marginStart="75dp"
            android:onClick="b2"
            android:text="八王子→駅　"
            app:layout_constraintEnd_toStartOf="@+id/b3"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/b0" />

    <ImageView
            android:id="@+id/image"
            android:layout_width="589dp"
            android:layout_height="551dp"
            android:layout_marginTop="228dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.629"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/bustime_minamino_school" />

</android.support.constraint.ConstraintLayout>