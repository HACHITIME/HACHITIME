<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/home_title" />

    <ImageView
            android:id="@+id/Hachitime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/home"
            app:layout_constraintEnd_toEndOf="@+id/home"
            app:layout_constraintStart_toStartOf="@+id/home"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.222"
            app:srcCompat="@drawable/home_hachitime" />

    <ImageButton
            android:id="@+id/sisetsuButton"
            android:layout_width="120dp"
            android:layout_height="138dp"
            android:layout_marginTop="56dp"
            android:background="@drawable/home_flame_style"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.054"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.525"
            app:srcCompat="@drawable/home_greenbutton" />

    <ImageButton
            android:id="@+id/mapbutton"
            android:layout_width="120dp"
            android:layout_height="138dp"
            android:background="@drawable/home_flame_style"

            app:layout_constraintBottom_toBottomOf="@+id/home"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.51"
            app:layout_constraintStart_toStartOf="@+id/home"
            app:layout_constraintTop_toTopOf="@+id/home"
            app:layout_constraintVertical_bias="0.568"
            app:srcCompat="@drawable/home_greenbutton" />

    <ImageButton
            android:id="@+id/stampButton"
            android:layout_width="120dp"
            android:layout_height="138dp"
            app:layout_constraintBottom_toBottomOf="@+id/home"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.97"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.568"
            app:srcCompat="@drawable/home_greenbutton"
            tools:visibility="visible" />

    <ImageView
            android:id="@+id/schoolmark"
            android:layout_width="80dp"
            android:layout_height="70dp"
            app:layout_constraintBottom_toBottomOf="@+id/sisetsuButton"
            app:layout_constraintEnd_toEndOf="@+id/sisetsuButton"
            app:layout_constraintStart_toStartOf="@+id/sisetsuButton"
            app:layout_constraintTop_toTopOf="@+id/sisetsuButton"
            app:layout_constraintVertical_bias="0.19999999"
            app:srcCompat="@drawable/home_school" />

    <TextView
            android:id="@+id/textsisetsu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:textStyle="bold"
            android:text="施設一覧"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#FFFFFF"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/sisetsuButton"
            app:layout_constraintEnd_toEndOf="@+id/sisetsuButton"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/sisetsuButton"
            app:layout_constraintTop_toTopOf="@+id/sisetsuButton"
            app:layout_constraintVertical_bias="0.798" />

    <ImageView
            android:id="@+id/mapmark"
            android:layout_width="80dp"
            android:layout_height="70dp"
            app:layout_constraintBottom_toBottomOf="@+id/mapbutton"
            app:layout_constraintEnd_toEndOf="@+id/mapbutton"
            app:layout_constraintHorizontal_bias="0.575"
            app:layout_constraintStart_toStartOf="@+id/mapbutton"
            app:layout_constraintTop_toTopOf="@+id/mapbutton"
            app:layout_constraintVertical_bias="0.191"
            app:srcCompat="@drawable/home_map" />

    <TextView
            android:id="@+id/textmap"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="マップ"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/mapbutton"
            app:layout_constraintEnd_toEndOf="@+id/mapbutton"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/mapbutton"
            app:layout_constraintTop_toTopOf="@+id/mapbutton"
            app:layout_constraintVertical_bias="0.807" />

    <ImageView
            android:id="@+id/stampmark"
            android:layout_width="80dp"
            android:layout_height="70dp"
            app:layout_constraintBottom_toBottomOf="@+id/stampButton"
            app:layout_constraintEnd_toEndOf="@+id/stampButton"
            app:layout_constraintStart_toStartOf="@+id/stampButton"
            app:layout_constraintTop_toTopOf="@+id/stampButton"
            app:layout_constraintVertical_bias="0.19"
            app:srcCompat="@drawable/home_stump" />

    <TextView
            android:id="@+id/textstamp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="スタンプ"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/stampButton"
            app:layout_constraintEnd_toEndOf="@+id/stampButton"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/stampButton"
            app:layout_constraintTop_toTopOf="@+id/stampButton"
            app:layout_constraintVertical_bias="0.798" />

    <ImageButton
            android:id="@+id/gakunaiButton"
            android:layout_width="120dp"
            android:layout_height="138dp"
            app:layout_constraintBottom_toBottomOf="@+id/home"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.25"
            app:layout_constraintStart_toStartOf="@+id/home"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.822"
            app:srcCompat="@drawable/home_greenbutton" />

    <ImageView
            android:id="@+id/infomationmark"
            android:layout_width="80dp"
            android:layout_height="70dp"
            app:layout_constraintBottom_toBottomOf="@+id/gakunaiButton"
            app:layout_constraintEnd_toEndOf="@+id/gakunaiButton"
            app:layout_constraintStart_toStartOf="@+id/gakunaiButton"
            app:layout_constraintTop_toTopOf="@+id/gakunaiButton"
            app:layout_constraintVertical_bias="0.19"
            app:srcCompat="@drawable/home_infomation" />

    <TextView
            android:id="@+id/infomationtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="学内情報"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/gakunaiButton"
            app:layout_constraintEnd_toEndOf="@+id/gakunaiButton"
            app:layout_constraintHorizontal_bias="0.562"
            app:layout_constraintStart_toStartOf="@+id/gakunaiButton"
            app:layout_constraintTop_toTopOf="@+id/gakunaiButton"
            app:layout_constraintVertical_bias="0.773" />

    <ImageButton
            android:id="@+id/busbutton"
            android:layout_width="120dp"
            android:layout_height="138dp"
            app:layout_constraintBottom_toBottomOf="@+id/home"
            app:layout_constraintEnd_toEndOf="@+id/home"
            app:layout_constraintHorizontal_bias="0.783"
            app:layout_constraintStart_toStartOf="@+id/home"
            app:layout_constraintTop_toTopOf="@+id/home"
            app:layout_constraintVertical_bias="0.822"
            app:srcCompat="@drawable/home_greenbutton" />

    <ImageView
            android:id="@+id/busmark"
            android:layout_width="90dp"
            android:layout_height="80dp"
            app:layout_constraintBottom_toBottomOf="@+id/busbutton"
            app:layout_constraintEnd_toEndOf="@+id/busbutton"
            app:layout_constraintHorizontal_bias="0.52"
            app:layout_constraintStart_toStartOf="@+id/busbutton"
            app:layout_constraintTop_toTopOf="@+id/busbutton"
            app:layout_constraintVertical_bias="0.06999999"
            app:srcCompat="@drawable/home_bus" />

    <TextView
            android:id="@+id/bustext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="バス"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/busbutton"
            app:layout_constraintEnd_toEndOf="@+id/busbutton"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="@+id/busbutton"
            app:layout_constraintTop_toTopOf="@+id/busbutton"
            app:layout_constraintVertical_bias="0.75" />

</android.support.constraint.ConstraintLayout>